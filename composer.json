{
    "name": "k9barry/8800sx",
    "description": "Viavi 8800SX Service Monitor Database Application",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "k9barry",
            "email": "k9barry@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-mysqli": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "data/web/app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 data/web/",
        "lint-fix": "phpcbf --standard=PSR12 data/web/",
        "analyze": "phpstan analyse data/web/",
        "mess-detect": "phpmd data/web text cleancode,codesize,controversial,design,naming,unusedcode",
        "quality": [
            "@lint",
            "@analyze", 
            "@mess-detect"
        ]
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}